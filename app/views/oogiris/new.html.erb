<div class="position-sticky mb-2 card col-sm-6 mx-auto" style="position: sticky; top: 56px; z-index: 100;">
  <div class="card-body">
    <div class="text-center mb-2 text-dark"><%= "お題" %></div>
    <div class="text-dark text-center table-secondary p-2"><%= @field.text_theme %></div>
  </div>
</div>
<div class="col-sm-6 mx-auto px-4">
  <div class="mt-3 small"><%= "回答プレビュー" %></div>
  <div class="card-body p-2 shadow-sm border mb-3">
    <div class="form-group text-muted d-flex small">
      <div class="d-flex form-check pt-1 ml-3">
        <input type="radio" name="-2点" value="" class="form-check-input">-2点
      </div>
      <div class="d-flex form-check pt-1 ml-3">
        <input type="radio" name="-1点" value="" class="form-check-input">-1点
      </div>
      <div class="d-flex form-check pt-1 ml-3">
        <input type="radio" name="1点" value="" class="form-check-input">1点
      </div>
      <div class="d-flex form-check pt-1 ml-3">
        <input type="radio" name="2点" value="" class="form-check-input">2点
      </div>
      <div class="d-flex form-check pt-1 ml-3">
        <input type="radio" name="3点" value="" class="form-check-input">3点
      </div>
    </div>
    <div class="p-2 table-secondary text-dark text-muted text-center"><%= "投稿がありまへん" %></div>
  </div>
</div>
<div class="card-body">
  <%= form_with(model: [@field, @oogiri], local: true) do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group small">
      <%= f.label :content, "回答フォーム" %><br />
      <%= f.text_area :content, autofocus: true, class: "col-sm-12 px-1", rows: 4 %>
    </div>

    <div class="actions">
      <%= f.submit "投稿", class: "btn btn-sm bg-dark text-white"  %>
    </div>
  <% end %>
</div>