<div class="my-2 card col-sm-6 mx-auto">
  <div class="card-body">
    <h3 class="text-center mt-1 mb-4 text-dark">お題</h3>
    <div class="text-dark"><%= @field.text_theme %></div>
  </div>
</div>
<div class="mb-2 card col-sm-6 mx-auto small">
  <hr>
  <div class="d-flex align-items-center px-1">
    <div class="d-flex text-nowrap">
      <div class="mr-2"><%= "順位" %></div>
      <div><%= "得点" %></div>
    </div>
    <div class="ml-3 float-left">
      <div class="text-left small text-secondary">名前</div>
      <div class="text-left"><%= "回答" %></div>
    </div>
  </div>
  <hr>
  <% @oogiris.each_with_index do |oogiri, i| %>
    <div class="d-flex align-items-center px-1">
      <div class="d-flex text-nowrap">
        <div class="mr-2"><%= "#{i + 1}位" %></div>
        <div><%= "#{oogiri.votes.sum(:vote_point)}点" %></div>
      </div>
      <div class="ml-3 float-left">
        <div class="d-flex small align-top">
          <div class="d-flex small mr-1">
            <% [3, 2, 1, -1, -2].each do |v| %>
              <div class="border mr-1"><%= "#{v}×#{oogiri.votes.where(vote_point: v).length}" %></div>
            <% end %>
          </div>
          <%= link_to oogiri.user.name, "#", class: "text-left small text-secondary" %>
        </div>
        <div class="py-2 align-items-center text-left"><%= oogiri.content %></div>
      </div>
    </div>
    <hr>
  <% end %>
</div>