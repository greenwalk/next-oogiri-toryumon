<div class="position-sticky mb-2 card col-sm-6 mx-auto" style="position: sticky; top: 56px; z-index: 100;">
  <div class="card-body">
    <div class="text-center mb-2 text-dark"><%= "お題" %></div>
    <div class="text-dark text-center table-secondary p-2"><%= @field.text_theme %></div>
  </div>
</div>
<div class="col-sm-6 mx-auto px-4">
  <div class="mt-3 mb-1 small"><%= "回答プレビュー" %></div>
  <div class="card-body p-2 shadow-sm border mb-3">
    <div class="form-group text-muted d-flex small mb-2">
      <div class="d-flex form-check pt-1 ml-3">
        <input type="radio" name="-2点" value="" class="form-check-input" disabled>-2点
      </div>
      <div class="d-flex form-check pt-1 ml-3">
        <input type="radio" name="0点" value="" class="form-check-input" disabled>0点
      </div>
      <div class="d-flex form-check pt-1 ml-3">
        <input type="radio" name="1点" value="" class="form-check-input" disabled>1点
      </div>
      <div class="d-flex form-check pt-1 ml-3">
        <input type="radio" name="2点" value="" class="form-check-input" disabled>2点
      </div>
      <div class="d-flex form-check pt-1 ml-3">
        <input type="radio" name="3点" value="" class="form-check-input" disabled>3点
      </div>
    </div>
    <hr class="my-0">
    <div class="px-2 pt-2 text-dark"><%= @oogiri.content %></div>
  </div>
</div>
<div class="card-body">
  <%= form_with(model: [@field, @oogiri], local: true) do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group small">
      <%= f.label :content, "回答フォーム" %><br />
      <%= f.text_area :content, autofocus: true, class: "col-sm-12 px-1", rows: 4 %>
    </div>

    <div class="d-flex">
      <div class="actions">
        <%= f.submit "変更", class: "btn btn-sm bg-dark text-white" %>
      </div>
      <div class="ml-4 actions">
        <%= link_to "リセット", field_oogiri_path(field_id: @field.id, id: @oogiri.id), class: "btn btn-sm btn-danger text-nowrap", method: :delete %>
      </div>
    </div>
  <% end %>
</div>
<hr class="mt-0">
<div class="justify-content-center d-flex text-center mb-3">
  <%= link_to "現在のお題", fields_now_field_path, class: "border w-40 mt-2 btn btn-sm btn-light" %>
  <%= link_to "TOPページ", root_path, class: "border ml-3 w-40 mt-2 btn btn-sm btn-light" %>
</div>