<% if oogiri.user == current_user %>
  <div class="d-flex align-items-center p-1 shadow-sm border my-2">
    <div class="p-3 my-0 text-dark">
      <%= oogiri.content %>
    </div>
  </div>
<% else %>
  <% if current_user.already_basin_liked?(oogiri) %>
    <%= link_to basin_field_basin_oogiri_basin_like_path(oogiri.basin_field, oogiri, oogiri.basin_likes.find_by(basin_oogiri_id: oogiri.id, user_id: current_user.id)), method: :delete, remote: true do %>
      <div class="d-flex align-items-center p-1 shadow-sm border border-primary my-2 table-primary">
        <div class="p-3 my-0 text-dark">
          <%= oogiri.content %>
        </div>
      </div>
    <% end %>
  <% else %>
    <%= link_to basin_field_basin_oogiri_basin_likes_path(oogiri.basin_field, oogiri), method: :post, remote: true do %>
      <div class="d-flex align-items-center p-1 shadow-sm border my-2">
        <div class="p-3 my-0 text-dark">
          <%= oogiri.content %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>