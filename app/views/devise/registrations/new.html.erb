<% require'date' %>
<div class="card col-sm-6 mx-auto">
  <div class="card-body">
    <div class="text-center mt-1 mb-4">ユーザー新規登録</div>

    <%= form_with model: @user, url: user_registration_path , local: true do |f| %>

      <%= render '/shared/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, id:"user_name", autofocus: true %>
        <p class="mt-1 p-1 table-secondary">
          後から変更できません<br>
          普段使用している名前を入力ください
        </p>
      </div>

      <div class="form-group">
        <%= f.label :oogiri_start, "大喜利を始めた年" %><br />
        <%= f.date_select :oogiri_start, use_month_numbers: true, discard_day: true, discard_month: true, start_year: 2012, end_year: Date.today.year, id:"user_start_year" %>
        <p class="mt-1 p-1 table-secondary">
          後から変更できません
        </p>
      </div>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, id:"user_email", autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, id:"user_password", autocomplete: "new-password" , placeholder: "8文字以上" %>
        <p class="mt-1 p-1 table-secondary">
          半角英数字のみ
        </p>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード再入力" %><br />
        <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password", placeholder: "8文字以上" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-sm bg-dark text-white"  %>
      </div>
    <% end %>
  </div>
</div>