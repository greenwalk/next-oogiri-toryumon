<div class="mt-2 card col-sm-6 mx-auto">
  <div class="card-body">
    <h3 class="text-center mt-1 mb-4">ログイン</h3>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <%= render 'devise/shared/error_messages', model: f.object %>

      <div class="form-group">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, id:"user_email", autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, id:"user_password", autocomplete: "new-password" , placeholder: "8文字以上" %>
        <p class="col-6 mt-1 p-1 table-secondary">
          半角英数字のみ
        </p>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-sm bg-dark text-white"  %>
      </div>
    <% end %>
  </div>
</div>