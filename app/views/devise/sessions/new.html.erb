<div class="mt-2 card-body col-sm-6 mx-auto">
    <div class="text-center mt-1 mb-4">
      ログイン
      <hr>
    </div>

    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <%= render '/shared/error_messages', model: f.object %>

      <div class="form-group small">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, id:"user_email", autocomplete: "email", class: "col-sm-12 px-1" %>
      </div>

      <div class="form-group small">
        <%= f.label :password, "パスワード" %><br />
        <%= f.password_field :password, id:"user_password", autocomplete: "new-password" , placeholder: "6文字以上", class: "col-sm-12 px-1" %>
        <p class="mt-1 p-1 table-secondary">
          半角英数字のみ
        </p>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-sm bg-dark text-white"  %>
      </div>
    <% end %>
</div>