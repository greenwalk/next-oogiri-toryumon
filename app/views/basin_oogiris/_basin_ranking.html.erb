<i class="fa-solid fa-crown m-1 text-warning" data-toggle="modal" data-target="#tenTimesModal"></i>

<%# ランキング用モーダル %>
<div class="modal fade" id="tenTimesModal" tabindex="-1" role="dialog" aria-labelledby="tenTimesModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tenTimesModalLabel">直近10回ランキング</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body small">
        <table class="table">
          <thead>
          <tr>
            <th scope="col">順位</th>
            <th scope="col">得点</th>
            <th scope="col">ユーザー</th>
          </tr>
          </thead>
          <tbody class="align-items-center">
          <% @top_ten.each_with_index do |user, i| %>
            <tr>
              <th scope="row" class="align-items-center">
                <span class="fa-stack">
                  <% if i <= 2 %>
                    <i class="fa-solid fa-crown fa-stack-2x" style="<%= i == 0 ? 'color: #ffc107;' : '' %> <%= i == 1 ? 'color: #c0c0c0;' : '' %> <%= i == 2 ? 'color: #d2691e;' : '' %>"></i>
                  <% end %>
                  <span class="fa-stack-1x"><%= i + 1 %></span>
                </span>
              </th>
              <td class="align-middle"><%= "#{user[1]}点" %></td>
              <td class="align-middle"><%= User.find_by(id: user[0]).name %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>