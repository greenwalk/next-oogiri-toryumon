      <% @votes.where(vote_point: 0).each do |vote| %>
        <p class="mb-2"><%= vote.oogiri.content %></p>
      <% end %>
    <% else %>
      <p class="text-center mb-2">なし</p>
    <% end %>
  </div>
</div>