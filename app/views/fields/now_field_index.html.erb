<div class="mt-3 col-sm-6 mx-auto">
  <% if @field_status == "投稿" %>
    <div class="card-body shadow-sm border">
      <div class="text-center mb-2 text-dark"><%= "現在のお題（#{@field_status}）" %></div>
      <% @now_fields.each do |field| %>
        <%= link_to(new_field_oogiri_path(field_id: field.id), class: "") do %>
          <div class="mt-2 text-dark text-center table-secondary p-2"><%= field.text_theme %></div>
        <% end %>
      <% end %>
    </div>
  <% elsif @field_status == "投票" %>
    <div class="card-body shadow-sm border">
      <div class="text-center mb-2 text-dark"><%= "現在のお題（#{@field_status}）" %></div>
      <% @now_fields.each do |field| %>
        <%= link_to(new_field_vote_path(field), class: "") do %>
          <div class="mt-2 text-dark text-center table-secondary p-2"><%= field.text_theme %></div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="card-body shadow-sm border">
      <div class="text-center mb-2 text-dark"><%= "現在のお題（#{@field_status}）" %></div>
      <% @now_fields.each do |field| %>
        <%= link_to(field_oogiris_path(field), class: "") do %>
          <div class="mt-2 text-dark text-center table-secondary p-2"><%= field.text_theme %></div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>